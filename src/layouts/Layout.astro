---
import SEO from '../components/SEO.astro';
import AdSlot from '../components/AdSlot.astro';

export interface Props {
  title: string;
  description?: string;
  slug?: string;
  image?: string;
  tags?: string[];
  pubDate?: string;
  products?: Array<{
    name: string;
    url: string;
  }>;
}

const { 
  title, 
  description = "TrendTiers - The best product tier lists and recommendations",
  slug = "",
  image,
  tags = [],
  pubDate,
  products = []
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <SEO 
    title={title}
    description={description}
    slug={slug}
    image={image}
    tags={tags}
    pubDate={pubDate}
    products={products}
  />
  <body class="bg-gradient-to-b from-white to-gray-50 text-gray-900 min-h-screen">
    <header class="sticky top-0 z-40 bg-white/80 backdrop-blur border-b">
      <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
        <div class="flex items-center justify-between">
          <a href="/" class="inline-flex items-center text-2xl font-extrabold tracking-tight">
            <span class="text-gray-900">Trend</span><span class="text-blue-600">Tiers</span>
          </a>
          <div class="hidden md:flex items-center space-x-6">
            <a href="/" class="text-gray-600 hover:text-blue-600 transition-colors">Home</a>
            <a href="/categories" class="text-gray-600 hover:text-blue-600 transition-colors">Categories</a>
            <a href="/about" class="text-gray-600 hover:text-blue-600 transition-colors">About</a>
          </div>
        </div>
        <!-- Header Ad Slot -->
        <div class="mt-3">
          <AdSlot slot="header" limit={2} />
        </div>
      </nav>
    </header>

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
      <slot />
    </main>

    <footer class="mt-16 border-t bg-gradient-to-r from-gray-50 to-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
        <div class="text-center text-gray-600">
          <p class="font-medium">&copy; 2025 TrendTiers. All rights reserved.</p>
          <p class="mt-2 text-sm">
            <a href="/privacy" class="hover:text-blue-600">Privacy Policy</a>
            <span class="mx-2">·</span>
            <a href="/terms" class="hover:text-blue-600">Terms of Service</a>
            <span class="mx-2">·</span>
            <a href="/affiliate-disclosure" class="hover:text-blue-600">Affiliate Disclosure</a>
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>
