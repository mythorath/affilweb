---
// TierList.astro - Component for displaying tiered product recommendations
import AffiliateButton from './AffiliateButton.astro';

export interface Props {
  tiers: {
    [key: string]: Array<{
      name: string;
      review: string;
      link: string;
      image?: string;
    }>;
  };
  useButtons?: boolean;
}

const { tiers, useButtons = false } = Astro.props;

// Define tier order to ensure consistent display
const tierOrder = ['S', 'A', 'B', 'C', 'D', 'F'];

// Get only the tiers that exist in the data, in the correct order
const sortedTiers = tierOrder.filter(tier => tiers[tier] && tiers[tier].length > 0);
---

<div class="tier-list">
  {sortedTiers.map((tierKey) => (
    <section class="tier-section mb-10">
      <h2 class="tier-heading text-2xl font-bold mb-6 p-4 rounded-lg flex items-center gap-3">
        <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-blue-600 text-white">
          {tierKey}
        </span>
        <span>Tier {tierKey}</span>
      </h2>

      <div class="products-grid">
        {tiers[tierKey].map((product) => (
          <div class="product-card bg-white border border-gray-200 p-5 rounded-xl shadow-sm hover:shadow-md">
            {product.image && (
              <div class="product-image mb-3">
                <img 
                  src={product.image} 
                  alt={product.name}
                  class="w-full h-40 object-cover rounded-lg"
                  loading="lazy"
                />
              </div>
            )}
            
            <h3 class="product-name text-lg font-semibold mb-2 line-clamp-2">
              {product.name}
            </h3>
            
            <p class="product-review text-gray-700 mb-4 text-sm leading-relaxed">
              {product.review}
            </p>
            
            {useButtons ? (
              <AffiliateButton href={product.link} />
            ) : (
              <a 
                href={product.link}
                class="buy-now-button inline-block bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors shadow-sm"
                rel="sponsored"
                target="_blank"
              >
                Buy Now
              </a>
            )}
          </div>
        ))}
      </div>
    </section>
  ))}
</div>

<style>
  .tier-list {
    max-width: 960px;
    margin: 0 auto;
  }
  
  .tier-heading {
    background: linear-gradient(135deg, #eef2ff 0%, #e0e7ff 100%);
    border-left: 6px solid #3b82f6;
  }
  
  .product-card {
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }
  
  .product-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
  }
  
  .buy-now-button {
    text-decoration: none;
    font-weight: 500;
  }
  
  .buy-now-button:hover {
    text-decoration: none;
  }

  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
